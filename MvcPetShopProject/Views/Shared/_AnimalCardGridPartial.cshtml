@model IEnumerable<MvcPetShopProject.Models.Animal>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div id="card-container" class="card-columns row d-flex justify-content-left">
    <div>
        @{
            if(Model.Count() == 0)
            {
                <partial name="_NoAnimalsFoundMsgPartial" />
            }
        }
    </div>
    @foreach (var animal in Model)
    {
        <div class="mx-3" style="width: fit-content;">
            <partial name="_AnimalCardPartial" model="@animal" />
        </div>
    }
</div>